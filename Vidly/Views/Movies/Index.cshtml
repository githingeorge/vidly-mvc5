@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
</p>
<table id="movies" class="table">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                ReleaseDate
            </th>
            <th>
                DateAdded
            </th>
            <th>
                NumberInStock
            </th>
            <th>
                Genre
            </th>
            <th></th>
        </tr>
    </thead>

    <tbody></tbody>

</table>



@section scripts
{
<script>
    $(document).ready(function () {
        var table = $("#movies").DataTable({
            ajax: {
                url: "/api/movies",
                dataSrc: ""
            },
            columns: [
                {
                    data: "name",
                    render: function (data, type, movie) {
                        return '<a href="movies/edit/' + movie.id + '">' + data + '</a>'
                    }
                },
                {
                    data: "releaseDate",
                },
                {
                    data: "dateAdded",
                },
                {
                    data: "numberInStock",
                },
                {
                    data: "genre.name",
                },
                {
                    data: "id",
                    render: function (data) {
                        return '<button data-movie-id="' + data + '" class="btn btn-link js-delete">Delete</button>'
                    }
                }
            ]
        });

        $("#movies").on("click", ".js-delete", function () {
            bootbox.confirm("Are you sure you want to delete this movie?", function (result) {
                if (result) {
                    var button = $(this);
                    $.ajax({
                        url: "/api/movies/" + button.data("movieId"),
                        method: "DELETE",
                        success: function () {
                            console.log("Successfully deleled.");
                            table.row(button.parent("tr")).remove().draw();
                        }
                    })
                }
            })
        });
    });
</script>
}