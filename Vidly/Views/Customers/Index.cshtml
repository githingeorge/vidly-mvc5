@model IEnumerable<Vidly.Models.Customer>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customers</h2>

<p>
    @Html.ActionLink("Create New", "New")
</p>
@if (!Model.Any())
{
    <p>We don't have any customers yet!</p>
}
else
{

<table id="customers" class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>Membership Type</th>
        <th> Discount Rate </th>
        <th></th>
    </tr>

@foreach (var customer in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => customer.Name)
        </td>
        <td>@customer.MembershipType.Name</td>
        <td>@customer.MembershipType.DiscountRate%</td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = customer.Id }) |
            @Html.ActionLink("Details", "Details", new { id = customer.Id }) |
            <button data-customer-id="@customer.Id" class="btn btn-link js-delete">Delete</button>
        </td>
    </tr>
}

</table>
}

@section scripts
{
    <script>
        $(document).ready(function () {
            $("#customers .js-delete").on("click", function () {
                if (confirm("Are you sure you want to delete this customer?")) {
                    var button = $(this);
                    $.ajax({
                        url: "/api/customers/" + button.data("customerId"),
                        method: "DELETE",
                        success: function () {
                            console.log("Successfully deleled.");
                            button.parent("tr").remove();
                        }
                    })
                }
            });
        });
    </script>
}